<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!-- Operations -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/rubik"
        android:text="@string/Default_Operations_Display_Value"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <!-- Display -->
    <TextView
        android:id="@+id/text_view_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/rubik"
        android:text="@string/Default_Display_Value"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <!-- First Row Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:id="@+id/button_all_clear"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#D6ECF3"
            android:insetRight="10dp"
            android:text="AC"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button_change_sign"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#D6ECF3"
            android:insetRight="10dp"
            android:text="+/-"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button_percent"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#D6ECF3"
            android:insetRight="10dp"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button_divide"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#ADD8E6"
            android:insetRight="0dp"
            android:text="รท"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

    </LinearLayout>

    <!-- Second Row Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:id="@+id/button_seven"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#F2F2F2"
            android:insetRight="10dp"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button_eight"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#F2F2F2"
            android:insetRight="10dp"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button_nine"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#F2F2F2"
            android:insetRight="10dp"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#ADD8E6"
            android:insetRight="0dp"
            android:text="x"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

    </LinearLayout>

    <!-- Third Row Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:id="@+id/button_four"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#F2F2F2"
            android:insetRight="10dp"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button_five"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#F2F2F2"
            android:insetRight="10dp"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button_six"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#F2F2F2"
            android:insetRight="10dp"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#ADD8E6"
            android:insetRight="0dp"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

    </LinearLayout>

    <!-- Fourth Row Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:id="@+id/button_one"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#F2F2F2"
            android:insetRight="10dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button_two"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#F2F2F2"
            android:insetRight="10dp"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button_three"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#F2F2F2"
            android:insetRight="10dp"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#ADD8E6"
            android:insetRight="0dp"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

    </LinearLayout>

    <!-- Fifth Row Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:id="@+id/button_zero"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:backgroundTint="#F2F2F2"
            android:insetRight="10dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#F2F2F2"
            android:insetRight="10dp"
            android:text="."
            android:textColor="@color/black"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button_equals"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#8ABAD3"
            android:insetRight="0dp"
            android:text="="
            android:textColor="@color/white"
            android:textSize="25sp"
            app:cornerRadius="15dp" />

    </LinearLayout>

</LinearLayout>